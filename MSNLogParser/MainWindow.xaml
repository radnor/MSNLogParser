<Window x:Class="MSNLogParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MSN Log Parser" Height="350" Width="525">
    <Grid>
        <Button Name="LoadButton" Content="Load File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="LoadButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="300" Margin="106,10,0,0" TextWrapping="Wrap" Text="Press Load File to load an MSN XML chat log." VerticalAlignment="Top" Width="401"
                 VerticalScrollBarVisibility="Auto" Name="OutputBox" />
        <Button Name="SaveButton" Content="Save Parsed Log" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="91" Click="SaveButton_Click"/>

    </Grid>
</Window>
